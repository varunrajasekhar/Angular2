{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": ["node"],
        "moduleResolution": "node",
        "rootDir": "client",
        "baseUrl": "client",
        "outDir": "comp/dist",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        //"resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
         ]
    },
    "include": [
        "client"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "node_modules"
    ],
    "compileOnSave": true
    
}